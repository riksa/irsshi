<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.riksa.irsshi"
          android:versionCode="1"
          android:versionName="1.0-SNAPSHOT">

    <uses-sdk
        android:targetSdkVersion="15"
        android:minSdkVersion="8"></uses-sdk>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name=".IrsshiApplication">
        <!--<activity android:name=".HelloAndroidActivity">-->
        <!--<intent-filter>-->
        <!--<action android:name="android.intent.action.MAIN"/>-->
        <!--<category android:name="android.intent.category.LAUNCHER"/>-->
        <!--</intent-filter>-->
        <!--</activity>-->
        <activity
            android:name=".HostListActivity"
            android:theme="@style/Theme.Holo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TerminalsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity
            android:name=".TutorialActivity"
            android:label="@string/tutorial_label"/>

        <provider
            android:name=".provider.HostProvider"
            android:authorities="org.riksa.irsshi.provider.HostProvider"/>
        <service android:name=".IrsshiService"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>

